@using TouristWebSite.Models
@model DiscountViewModel

<h2>Додати акцію</h2>
@using (Html.BeginForm("AddDiscount", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Додайте нову акцію для сайту.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @style = "min-height: 150px" })
                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EndDate, new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Link, new { @class = "col-md-2 control-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(m => m.Link, new { @class = "form-control", @style = "min-height: 50px" })
                @Html.ValidationMessageFor(m => m.Link, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-9">
                <button type="submit" class="btn btn-success"> <i class="fas fa-plus"></i> Додати </button>
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
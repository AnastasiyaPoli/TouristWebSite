@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Особистий кабінет", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Перейти до розділу «Особистий кабінет»" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()", title = "Вийти з акаунта">Вихід</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Реєстрація", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", title = "Перейти до розділу «Реєстрація»" })</li>
        <li>@Html.ActionLink("Вхід", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", title = "Перейти до розділу «Вхід»" })</li>
    </ul>
}
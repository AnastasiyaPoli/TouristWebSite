@using TouristWebSite.Models
@model TourViewModel

<h2>Редагувати тур</h2>
@using (Html.BeginForm("Update", "Tours", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Редагуйте тур для сайту.</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Place, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Place, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Place, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @style = "min-height: 150px" })
            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateStart, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.DateStart, new { @class = "form-control", @type = "date", @Value = Model.DateStart.ToString("yyyy-MM-dd") })
            @Html.ValidationMessageFor(m => m.DateStart, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateEnd, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.DateEnd, new { @class = "form-control", @type = "date", @Value = Model.DateEnd.ToString("yyyy-MM-dd") })
            @Html.ValidationMessageFor(m => m.DateEnd, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @type = "number" })
            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RouteLink, new { @class = "col-md-2 control-label" })
        <div class="col-md-9">
            @Html.TextAreaFor(m => m.RouteLink, new { @class = "form-control", @style = "min-height: 50px" })
            @Html.ValidationMessageFor(m => m.RouteLink, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-9">
            <button type="submit" class="btn btn-success"> <i class="fas fa-check"></i> Змінити </button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@using Microsoft.AspNet.Identity
@model TouristWebSite.Models.ImageViewModel

<h2>Фотографії туру @Model.Tour.Name (@Model.Tour.Place)</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div>
    <h4>Управляйте фотографіями туру.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Всі фото (@Model.Tour.NumberOfPhotos):</dt>
        <dd>
            <a href="/Tours/DeleteAll?itemId=@Model.Tour.Id">Видалити всі фото </a>
        </dd>

        <dt>Додати фото:</dt>
        <dd>
            @using (Html.BeginForm("AddPhoto", "Tours", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.TourId)

                <label class="link" for="ImagePath">Завантажити зображення</label> <i id="tick" style="display: none" class="fas fa-check"></i>
                <input id="ImagePath" title="Upload a product image" type="file" name="file" style="display:none;" onchange="showtick()" />
                <br />
                <button type="submit" class="btn btn-success"> <i class="fas fa-plus"></i> Додати </button>
            }
        </dd>
    </dl>
</div>

<script>
    function showtick() {
        document.getElementById("tick").style.display = "inline";
    }
</script>
@model TouristWebSite.Models.BookedToursViewModel
<h2>Заброньовані тури</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<h4>Переглядайте заброньовані раніше пакетні тури. Перейти до детальнішої інформації можна натиснувши на заголовок туру.</h4>

@foreach (var item in Model.BookedTours)
{
    <div class="jumbotron transparent transp-container">
        <div>
        </div>
        <br />
        <div class="flex-container">
            <div>
                <h3><a href="@Url.Action("Details", "Tours", new {itemId = item.TourId})", title="Перейти до більш детальної інформації про тур"><strong>@item.Tour.Name (@item.Tour.Place)</strong></a></h3>
                <h4><strong>Дати: </strong> @item.Tour.DateStart.ToShortDateString() - @item.Tour.DateEnd.ToShortDateString()</h4>
                <h4><strong>Ціна: </strong> @item.Tour.Price грн.</h4>

                @if (item.Tour.Description.Length > 200)
                {
                    <h4>@string.Concat(item.Tour.Description.Substring(0, 200), "...")</h4>
                }
                else
                {
                    <h4>@item.Tour.Description</h4>
                }
            </div>
            @if (item.Tour.NumberOfPhotos > 0)
            {
                <div>
                    <img class="img-style" src="~/Content/Img/Tours/@(item.TourId).jpg" />
                </div>
            }
        </div>
    </div>
}